ALTER PROCEDURE [dbo].[mp_RssFeeds_Update]

/*
Author:   			Joe Audette
Created: 			2005-03-27
Last Modified: 		2013-07-27


*/
	
@ItemID int, 
@ModuleID int, 
@Author nvarchar(100), 
@Url nvarchar(max), 
@RssUrl nvarchar(255),
@LastModUserGuid	uniqueidentifier,
@LastModUtc	datetime,
@ImageUrl nvarchar(255),
@FeedType nvarchar(20),
@PublishByDefault bit,
@SortRank int



AS

UPDATE 		[dbo].[mp_RssFeeds] 

SET
			[ModuleID] = @ModuleID,
			[Author] = @Author,
			[Url] = @Url,
			[RssUrl] = @RssUrl,
			LastModUserGuid = @LastModUserGuid,
			LastModUtc = @LastModUtc,
			ImageUrl = @ImageUrl,
			FeedType = @FeedType,
			PublishByDefault = @PublishByDefault,
			SortRank = @SortRank
			
WHERE
			[ItemID] = @ItemID


GO

