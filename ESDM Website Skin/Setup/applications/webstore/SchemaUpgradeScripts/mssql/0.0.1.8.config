ALTER PROCEDURE [dbo].[ws_OrderOffers_SelectByOrder]

/*
Author:   			Joe Audette
Created: 			2007-03-17
Last Modified: 		2008-08-13
*/

@OrderGuid uniqueidentifier,
@LanguageGuid uniqueidentifier

AS


SELECT
		o.[ItemGuid],
		o.[OrderGuid],
		o.[OfferGuid],
		o.[PriceGuid],
		o.[CurrencyGuid],
		o.[TaxClassGuid],
		o.[OfferPrice],
		o.[AddedToCart],
		o.[Quantity],
		'Name' = COALESCE(od.[ShortDescription],
			(SELECT TOP 1 [ShortDescription] + ' needs translation'
			FROM [dbo].[ws_OfferDescription]
			WHERE [dbo].[ws_OfferDescription].[OfferGuid] = o.OfferGuid)
			)
		
FROM
		[dbo].[ws_OrderOffers] o

LEFT OUTER JOIN
		[dbo].[ws_OfferDescription] od

ON		o.OfferGuid = od.OfferGuid
AND		od.LanguageGuid = @LanguageGuid


		
WHERE
		o.[OrderGuid] = @OrderGuid

ORDER BY od.[ShortDescription]

GO








