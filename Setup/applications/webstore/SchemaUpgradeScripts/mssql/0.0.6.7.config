ALTER PROCEDURE [dbo].[ws_Product_SelectByPage]

/*
Author:			Joe Audettte
Created:		2008-12-13
Last Modified:	2010-05-30

*/


@SiteID		int,
@PageID		int

AS
SELECT  	pr.*,
		s.ModuleID,
		m.ModuleTitle,
		m.ViewRoles,
		md.FeatureName

FROM		ws_Product pr

JOIN	ws_Store s
ON s.[Guid] = pr.StoreGuid

JOIN		mp_Modules m
ON		s.ModuleID = m.ModuleID

JOIN		mp_ModuleDefinitions md
ON		m.ModuleDefID = md.ModuleDefID

JOIN		mp_PageModules pm
ON			pm.ModuleID = m.ModuleID

JOIN		mp_Pages p
ON		p.PageID = pm.PageID

WHERE	p.SiteID = @SiteID
		AND pm.PageID = @PageID
		AND pr.IsDeleted = 0
		AND pr.ShowInProductList = 1
		AND pr.[Guid] IN (
				SELECT op.ProductGuid 
				FROM [dbo].ws_OfferProduct op
				JOIN [dbo].ws_Offer o
				ON	op.OfferGuid = o.[Guid]
				WHERE op.IsDeleted = 0
				AND o.IsDeleted = 0
				AND o.IsVisible = 1
				)


GO

CREATE PROCEDURE [dbo].[ws_Offer_SelectByPage]

/*
Author:			Joe Audettte
Created:		2010-05-31
Last Modified:	2010-05-31

*/


@SiteID		int,
@PageID		int

AS
SELECT  	o.*,
		s.ModuleID,
		m.ModuleTitle,
		m.ViewRoles,
		md.FeatureName

FROM		ws_Offer o

JOIN	ws_Store s
ON s.[Guid] = o.StoreGuid

JOIN		mp_Modules m
ON		s.ModuleID = m.ModuleID

JOIN		mp_ModuleDefinitions md
ON		m.ModuleDefID = md.ModuleDefID

JOIN		mp_PageModules pm
ON			pm.ModuleID = m.ModuleID

JOIN		mp_Pages p
ON		p.PageID = pm.PageID

WHERE	p.SiteID = @SiteID
		AND pm.PageID = @PageID
		AND o.IsDeleted = 0
		AND o.IsVisible = 1
		AND o.[Guid] IN (
				SELECT op.OfferGuid 
				FROM [dbo].ws_OfferProduct op
				JOIN [dbo].ws_Product p
				ON	op.ProductGuid = p.[Guid]
				WHERE op.IsDeleted = 0
				AND p.IsDeleted = 0
				AND p.ShowInProductList = 1
				)


GO

