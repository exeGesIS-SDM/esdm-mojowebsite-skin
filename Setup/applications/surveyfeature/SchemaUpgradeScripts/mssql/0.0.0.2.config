CREATE PROCEDURE [dbo].[mp_SurveyQuestionOptions_Select]


/*

Author:                 Rob Henry

Created:                10/09/2007

Last Modified:          31/10/2007

*/


@QuestionGuid uniqueidentifier


AS


SELECT

[QuestionOptionGuid],

[QuestionGuid],

[Answer],

[Order]



FROM

[dbo].[mp_SurveyQuestionOptions]

WHERE

[QuestionGuid] = @QuestionGuid

ORDER BY

[Order]


