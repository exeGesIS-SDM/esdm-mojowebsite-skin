ALTER PROCEDURE [dbo].[mp_ForumThreads_Insert]

/*
Author:			Joe Audette
Created:		2004-09-19
Last Modified:	2012-12-17

*/

@ForumID			int,
@ThreadSubject		nvarchar(255),
@SortOrder			int,
@IsLocked			bit,
@StartedByUserID		int,
@ThreadDate		datetime,
@ThreadGuid uniqueidentifier,
@IsQuestion bit,
@IncludeInSiteMap bit,
@SetNoIndexMeta bit,
@PTitleOverride nvarchar(255)



AS
DECLARE @ThreadID int
DECLARE @ForumSequence int
SET @ForumSequence = (SELECT COALESCE(Max(ForumSequence) + 1,1) FROM [dbo].mp_ForumThreads WHERE ForumID = @ForumID)

INSERT INTO		[dbo].mp_ForumThreads
(
			ForumID,
			ThreadSubject,
			SortOrder,
			ForumSequence,
			IsLocked,
			StartedByUserID,
			ThreadDate,
			MostRecentPostUserID,
			MostRecentPostDate,
			ThreadGuid,
			IsQuestion,
			IncludeInSiteMap,
			SetNoIndexMeta,
			PTitleOverride

)

VALUES
(
			
			@ForumID,
			@ThreadSubject,
			@SortOrder,
			@ForumSequence,
			@IsLocked,
			@StartedByUserID,
			@ThreadDate,
			@StartedByUserID,
			@ThreadDate,
			@ThreadGuid,
			@IsQuestion,
			@IncludeInSiteMap,
			@SetNoIndexMeta,
			@PTitleOverride


)

SELECT @@IDENTITY  AS ThreadID


GO


