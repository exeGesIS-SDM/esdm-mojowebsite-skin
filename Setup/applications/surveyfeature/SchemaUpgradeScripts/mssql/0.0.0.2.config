CREATE PROCEDURE [dbo].[mp_SurveyResponses_GetFirst]

/*
Author:   			Rob Henry
Created: 			2007-10-21
Last Modified: 		2007-10-21
*/

@SurveyGuid uniqueidentifier

AS

SELECT TOP 1
[ResponseGuid],
[SurveyGuid],
[UserId],
[SubmissionDate],
[Annonymous],
[Complete]

FROM
[dbo].[mp_SurveyResponses]

WHERE
Complete = 1
AND
SurveyGuid = @SurveyGuid
ORDER BY
SubmissionDate,
ResponseGuid

GO