ALTER PROCEDURE [dbo].[mp_Users_SelectByLoginName]

    
@SiteID	int,
@LoginName 		nvarchar(50),
@AllowEmailFallback bit


AS

SELECT	*

FROM
    mp_Users

WHERE
	SiteID = @SiteID
   	AND (LoginName = @LoginName 
   	OR (@AllowEmailFallback = 1 AND Email = @LoginName) 
   	)


