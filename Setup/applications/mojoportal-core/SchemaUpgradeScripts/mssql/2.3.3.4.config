CREATE PROCEDURE [dbo].[mp_UserRoles_CountNotInRole]

-- Author:   			Joe Audette
-- Created: 			2009-12-26
-- Last Modified: 		2009-12-26

@SiteID	int,
@RoleID  int

AS


SELECT  COUNT(DISTINCT u.UserID)

FROM		mp_Users  u
    		
    
LEFT OUTER JOIN 		
		mp_UserRoles ur

ON 		u.UserID = ur.UserID
		AND ur.RoleID = @RoleID

WHERE		u.SiteID = @SiteID
    		
			AND ur.RoleID IS NULL





GO

