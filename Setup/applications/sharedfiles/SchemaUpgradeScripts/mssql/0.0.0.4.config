ALTER PROCEDURE [dbo].[mp_SharedFileFolders_SelectByModule]

/*
Author:   			Joe Audette
Created: 			2005-01-05
Last Modified: 		2009-11-03
*/

@ModuleID		int,
@ParentID		int


AS

SELECT *
		
FROM
		[dbo].[mp_SharedFileFolders]

WHERE	ModuleID = @ModuleID
		AND ParentID = @ParentID
		
ORDER BY
		FolderName

GO

