ALTER PROCEDURE [dbo].[mp_RssFeeds_Insert]

/*
Author:   			Joe Audette
Created: 			2005-03-27
Last Modified: 		2013-07-26

*/

@ItemGuid	uniqueidentifier,
@ModuleGuid	uniqueidentifier,
@UserGuid	uniqueidentifier,
@ModuleID int,
@UserID int,
@Author nvarchar(100),
@Url nvarchar(max),
@RssUrl nvarchar(255),
@CreatedDate	datetime,
@ImageUrl nvarchar(255),
@FeedType nvarchar(20),
@PublishByDefault bit,
@SortRank int

AS

INSERT INTO 	[dbo].[mp_RssFeeds] 
(
				ItemGuid,
				ModuleGuid,
				UserGuid,
				[ModuleID],
				[CreatedDate],
				[UserID],
				[Author],
				[Url],
				[RssUrl],
				LastModUserGuid,
				LastModUtc,
				[ImageUrl],
				[FeedType],
				[PublishByDefault],
				SortRank
) 

VALUES 
(
				@ItemGuid,
				@ModuleGuid,
				@UserGuid,
				@ModuleID,
				@CreatedDate,
				@UserID,
				@Author,
				@Url,
				@RssUrl,
				@UserGuid,
				@CreatedDate,
				@ImageUrl,
				@FeedType,
				@PublishByDefault,
				@SortRank
				
)
SELECT @@IDENTITY


